{
  "name": "pocket-camera-pwa",
  "version": "1.0.0",
  "main": "js/app.js",
  "repository": "https://github.com/duckyb/pocket-camera-pwa.git",
  "author": "trashbytes",
  "license": "UNLICENSED",
  "scripts": {
    "build:sass": "node-sass src/scss -o dist/css",
    "build:js": "uglifyjs src/js/app.js -o dist/js/app.min.js",
    "watch:sass": "chokidar 'src/scss/**/*.scss' -c 'npm run build:sass'",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run build:js'",
    "watch": "npm-run-all --parallel watch:sass watch:js"
  },
  "devDependencies": {
    "node-sass": "^9.0.0",
    "uglifyjs": "^2.4.11",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
